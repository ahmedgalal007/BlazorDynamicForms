@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider CloseButton="true" CloseOnEscapeKey="true" MaxWidth="MaxWidth.Large" FullWidth="true" Position="DialogPosition.TopCenter" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton OnClick="DrawerToggle" Icon="@Icons.Material.Filled.Menu" Color="@Color.Inherit" Edge="@Edge.Start" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen { get; set; } = true;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}