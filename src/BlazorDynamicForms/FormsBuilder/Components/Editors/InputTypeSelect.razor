
<MudSelect T="InputType" @bind-Value="@Model.InputType" Label="Select Input Type" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined" >

    @foreach (var item in inputTypes)
    {
        <MudSelectItem Value="@(item.Value)">@item.Key</MudSelectItem>
    }
</MudSelect>
@code {
    // [Parameter]
    // public InputType InputType { get; set; }
    [Parameter]
    public MetaDataItem Model { get; set; }

    Dictionary<string, InputType> inputTypes { get; set; } = new();
    protected override Task OnInitializedAsync()
    {
        foreach (var item in Enum.GetValues<InputType>())
        {
            inputTypes.Add(Enum.GetName<InputType>(item), item);
        }
        return base.OnInitializedAsync();
    }
}